root = true

[*]
charset = utf-8
end_of_line = lf
tab_width = 2
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.html]
max_line_length = 240

[*.py]
indent_size = 4
tab_width = 4

[Makefile]
tab_width = 4
indent_style = tab
max_line_length = 240
